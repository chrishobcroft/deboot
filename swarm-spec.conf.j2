title Swarm Linux ({{ kernel }}) 38 (Thirty Eight)
version {{ kernel }}
linux /boot/vmlinuz-{{ kernel }}
initrd /boot/swarm-initrd-{{ kernel }}
{% if loader == "u-boot" -%}
append root=live:bzz://{{ hash }} consoleblank=0 systemd.show_status=true crashkernel=auto no_timer_check console=tty1 console=ttyS0,115200n
fdtdir /boot/dtb-{{ kernel }}
{% else -%}
options root=live:bzz://{{ hash }} consoleblank=0 systemd.show_status=true crashkernel=auto no_timer_check console=tty1 console=ttyS0,115200n8
{% endif -%}
